@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
    Layout = null;

    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;
    var siteName = settings?.Value<string>("siteName") ?? "Onatrix";
    var siteTagline = settings?.Value<string>("siteTagline") ?? "Financial Solutions";

    var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag?.Title} | {siteName} - {siteTagline}" : $"{siteName} - {siteTagline}";
  

    var isHomePage = Model.Key == new Guid("bb0e9897-5ff3-45ee-94d7-c74442c19ac1");

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/whyChooseUsSection.css">
     <link rel="stylesheet" href="/css/letusknowsection.css">
    <link rel="stylesheet" href="/css/ourServicesSection.css">
    <link rel="stylesheet" href="/css/ourProjectsSection.css">
    <link rel="stylesheet" href="/css/successStory.css">

 
    <title>@pageTitle</title>
</head>

<body>
    <div class="wrapper">
        @await Html.PartialAsync("partials/static/topbar.cshtml")
        @await Html.PartialAsync("partials/static/header.cshtml")
        <main>            
                @RenderBody()                        
        </main> 

        @if (!isHomePage)
        {
            @await Html.PartialAsync("partials/static/letusknowsection.cshtml")
        }  

    </div>



    @await Html.PartialAsync("partials/static/footer.cshtml")

    <script src="/script.main.js"></script>
</body>
</html>

